% DR in Durstewitz and Grabriel 2007
% In Poirazi 2013:
% an(X) multiplied by 3 to get faster repolarization
% gKdr increased from .35 to 25

% parameters
gKdr=25; EK=-80; IC=.1; IC_noise=0;

% functions
an(X)=(-.018*(X-13)./(-1+exp(-(X-13)/25))) % *3
bn(X)=.0054*(X-23)./(-1+exp((X-23)/12))
ninf(X)=an(X)./(an(X)+bn(X))
ntau(X)=1./(an(X)+bn(X))

% ODEs and ICs
n'=(ninf(X)-n)./ntau(X)
n(0)=IC+IC_noise.*rand(1,Npop)
IKdr(X,n)=gKdr.*n.^4.*(X-EK)

% linkers
@current += -IKdr(X,n)
